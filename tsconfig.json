{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "include": ["src", "src/custom.d.ts"],
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "paths": {
      "~*": [
        "./src/*"
      ]
    }
  },
  "lib": ["esnext"],
  "allowJs": true,
  "jsx": "react-native",
  "noEmit": true,
  "incremental": true,
  "isolatedModules": true,
  "strict": true,
  "moduleResolution": "node",
  "baseUrl": "./src",
  "resolveJsonModule": true,
  "allowSyntheticDefaultImports": true,
  "esModuleInterop": true,
}
